  <ul>
    {{#if}}
      <div>
      <th>No existe ninguna reserva bajo estas fechas</th>
    </div>
    {{else}}
    {{#each reservas as |reservaUnit|}}
    <li>{{reservas-listing reserva=reservaUnit}}</li>
    {{/each}}
    {{/if}}

  </ul>-->
  {{/reservas-filter}}


</div>
