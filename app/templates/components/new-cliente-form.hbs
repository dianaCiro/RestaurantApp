<div align="center">
<div class="page-header">
  <h1>Crear un Nuevo Cliente<small></small></h1>
</div >

<form id ="form-create"class="form-horizontal">
  <div class="errors-container" id="errors"></div>
  <fieldset>
      <div class="form-group {{if changeset.error.username 'has-error'}}" id=username>
        <label for="" class="col-sm-4 control-label" >Nombre de Usuario</label>
        <div class="col-sm-4 controls">
          {{input  placeholder="Ingrese su nombre de usuario" class="form-control" value=changeset.username}}
          {{#if changeset.error.username}}
            <span class="help-block">{{changeset.error.username.validation}}</span>
          {{/if}}
        </div>
      </div>
    <div class="form-group {{if changeset.error.name 'has-error'}}">
       <label for="" class="col-sm-4 control-label">Nombres</label>
       <div class="col-sm-4">
        {{input  placeholder="Ingrese su nombre completo" class="form-control" value=changeset.name}}
        {{#if changeset.error.name}}
          <span class="help-block">{{changeset.error.name.validation}}</span>
        {{/if}}
        </div>
    </div>
    <div class="form-group {{if changeset.error.identification 'has-error'}}" id="identification">
      <label for="" class="col-sm-4 control-label">Documento de Identidad</label>
      <div class="col-sm-4">
        {{input placeholder="Ingrese su documento de identidad" class="form-control" value=changeset.identification}}
        {{#if changeset.error.identification}}
          <span id='idenError' class="help-block">{{changeset.error.identification.validation}}</span>
        {{/if}}
      </div>
    </div>
    <div class="form-group {{if changeset.error.email 'has-error'}}">
       <label for="" class="col-sm-4 control-label">Correo Electrónico</label>
       <div class="col-sm-4">
       {{input placeholder="Ingrese su e-mail" class="form-control" value=changeset.email }}
       {{#if changeset.error.email}}
         <span class="help-block">{{changeset.error.email.validation}}</span>
       {{/if}}
       </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-4 control-label">Numero de Telefono</label>
        <div class="col-sm-4">
        {{input placeholder="Ingrese su numero de telefono" class="form-control" value=changeset.phone}}
        </div>
    </div>
    <div class="form-group ">
        <label for="" class="col-sm-4 control-label">Rol de Usuario</label>
        <div class="col-sm-4">
          {{#power-select options=roles selected=rolSelected searchEnabled=false onchange=(action "setRole") as |role|}}
            {{role}}
          {{/power-select}}
        </div>
    </div>
    <div class="form-group {{if changeset.error.password 'has-error'}}">
        <label for="" class="col-sm-4 control-label">Contraseña</label>
        <div class="col-sm-4">
        {{input  placeholder="Ingrese una contraseña" class="form-control" value=changeset.password  type="password"}}
        {{#if changeset.error.password}}
          <span class="help-block">{{changeset.error.password.validation}}</span>
        {{/if}}
        </div>
    </div>
    <div class="form-group {{if changeset.error.passwordConfirmation 'has-error'}}">
       <label for="" class="col-sm-4 control-label">Confirmar contraseña</label>
        <div class="col-sm-4">
       {{input placeholder="Confirme la contraseña" class="form-control" value=changeset.passwordConfirmation  type="password"}}
       {{#if changeset.error.passwordConfirmation}}
         <span class="help-block">{{changeset.error.passwordConfirmation.validation}}</span>
       {{/if}}
       </div>
    </div>
      <button class=" btn btn-primary btn-lg" {{action 'save'}}>Registrar</button>
      <button class=" btn btn-primary btn-lg" {{action 'rollback'}}>Cancelar</button>
  </fieldset>
</form>
</div>
