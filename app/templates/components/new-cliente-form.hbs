<div align="center">
<div class="page-header">
  <h1>Crear un Nuevo Cliente<small></small></h1>
</div >

<form id ="form-create"class="form-horizontal">
  <fieldset>
     <div class="form-group">
        <label for="" class="col-sm-4 control-label" >Nombre de Usuario</label>
        <div class="col-sm-4">
       {{input  placeholder="Username" class="form-control" value=changeset.username}}
       </div>
    </div>
    <div class="form-group">
       <label for="" class="col-sm-4 control-label">Nombres</label>
       <div class="col-sm-4">
        {{input  placeholder="Names" class="form-control" value=changeset.nameClient}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-4 control-label">Apellidos</label>
         <div class="col-sm-4">
        {{input placeholder="Lastname" class="form-control" value=changeset.lastname}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-4 control-label">Documento</label>
        <div class="col-sm-4">
       {{input placeholder="Id" class="form-control" value=changeset.idClient}}
       </div>
     </div>
     <div class="form-group">
       <label for="" class="col-sm-4 control-label">Correo</label>
       <div class="col-sm-4">
       {{input placeholder="Email" class="form-control" value=changeset.email}}
       </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-4 control-label">Numero de Telefono</label>
        <div class="col-sm-4">
        {{input placeholder="Telephone number" class="form-control" value=changeset.phone}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-4 control-label">Numero de Celular</label>
        <div class="col-sm-4">
        {{input placeholder="Cellphone number" class="form-control" value=changeset.cellphone}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-4 control-label">Contraseña</label>
        <div class="col-sm-4">
        {{input  placeholder="Password" class="form-control" value=changeset.password}}
        </div>
    </div>
    <div class="form-group">
       <label for="" class="col-sm-4 control-label">Confirmar contraseña</label>
        <div class="col-sm-4">
       {{input placeholder="Confirm Password" class="form-control"}}
       </div>
    </div>
      <button class=" btn btn-primary btn-lg" {{action 'save'}}>Registrar</button>
      <button class=" btn btn-primary btn-lg" {{action 'rollback'}}>Cancelar</button>
  </fieldset>
</form>
</div>
